<Page x:Class="VGL1.Menus.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VGL1.Menus"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Home">
    <Page.DataContext>
        <local:HomeViewModel />
    </Page.DataContext>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="130" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0">
            <TextBlock Text="App Version:" />
            <TextBlock Text="Number of Class:" />
            <TextBlock Text="Number of Field:" />
            <TextBlock Text="Number of Property:" />
            <TextBlock Text="Number of Interface:" />
            <TextBlock Text="Number of Event:" />
        </StackPanel>

        <StackPanel Grid.Column="1">
            <TextBlock Text="0.1" />
            <TextBlock Text="{Binding ReflectionCount[Class]}" />
            <TextBlock Text="{Binding ReflectionCount[Field]}"  />
            <TextBlock Text="{Binding ReflectionCount[Property]}" />
            <TextBlock Text="{Binding ReflectionCount[Interface]}" />
            <TextBlock Text="{Binding ReflectionCount[Event]}" />
        </StackPanel>

    </Grid>
</Page>
