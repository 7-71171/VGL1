<Window x:Class="VGL1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VGL1"
        xmlns:controls="clr-namespace:VGL1.Controls"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        WindowStyle="None" ResizeMode="NoResize">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--コンテンツー-->
        <Frame Grid.Row="1" Grid.Column="1" Content="{Binding MainFrameContent}" NavigationUIVisibility="Hidden" />

        <!--サイドバー-->
        <controls:Sidebar Grid.Row="0" Grid.RowSpan="2" Grid.Column="0"
                          BackButtonVisibility="{Binding BackButtonVisibility}" Items="{Binding SidebarItems}" ButtonCommand="{Binding ButtonCommand}"/>

        <!--タイトルバー-->
        <Grid Name="TitlebarGrid" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="138" />
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0" Name="Titlebar" Height="32" Background="Transparent" MouseLeftButtonDown="Titlebar_MouseLeftButtonDown" Panel.ZIndex="10" />
            <TextBlock Text="{Binding Title}" VerticalAlignment="Center" />
            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Name="MinButton" BorderThickness="0" Background="LightGray" Width="46" Height="32" Click="MinButton_Click" />
                <Button Name="MaxButton" BorderThickness="0" Background="Gray" Width="46" Height="32" Click="MaxButton_Click" />
                <Button Name="CloseButton" BorderThickness="0" Background="Black" Width="46" Height="32" Click="CloseButton_Click" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>
