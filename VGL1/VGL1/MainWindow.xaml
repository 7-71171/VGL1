<Window x:Class="VGL1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VGL1"
        xmlns:controls="clr-namespace:VGL1.Controls"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        WindowStyle="None" ResizeMode="NoResize">
    
    <controls:VGLWindow
        Title="{Binding Title}"
        BackButtonVisibility="{Binding BackButtonVisibility}"
        SidebarItems="{Binding SidebarItems}"
        ButtonCommand="{Binding ButtonCommand}"
        MainFrameContent="{Binding MainFrameContent}" />
</Window>
