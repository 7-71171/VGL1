<UserControl x:Class="VGL1.Controls.VGLWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VGL1.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--コンテンツー-->
        <Frame Grid.Row="1" Grid.Column="1" Content="{Binding MainFrameContent}" NavigationUIVisibility="Hidden" />

        <!--サイドバー-->
        <Border Grid.Row="0" Grid.RowSpan="2" Grid.Column="0" Background="LightGray">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="32" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Button Grid.Row="0" Name="BackButton" Content="&lt;" HorizontalAlignment="Left" HorizontalContentAlignment="Center" FontSize="14" Foreground="White"
                Command="{Binding ButtonCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                Width="32" Height="32" BorderThickness="0" Background="Black" Visibility="{Binding BackButtonVisibility ,RelativeSource={RelativeSource AncestorType=UserControl}}" />

                <ItemsControl Grid.Row="1" ItemsSource="{Binding SidebarItems, RelativeSource={RelativeSource AncestorType=UserControl}}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Height="32" Margin="10,7,10,0"
                            Command="{Binding ButtonCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                            CommandParameter="{Binding ButtonCommandParameter}"
                            HorizontalContentAlignment="Left" Padding="10,0,0,0" Background="Transparent" BorderThickness="0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Icon}" />
                                    <TextBlock Text="{Binding Name}" Margin="10,0,0,0" />
                                </StackPanel>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </Border>

        <!--タイトルバー-->
        <Grid Name="TitlebarGrid" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="138" />
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0" Name="Titlebar" Height="32" Background="Transparent" MouseLeftButtonDown="Titlebar_MouseLeftButtonDown" Panel.ZIndex="10" />
            <TextBlock Text="{Binding Title}" VerticalAlignment="Center" />
            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Name="MinButton" BorderThickness="0" Background="LightGray" Width="46" Height="32" Click="MinButton_Click" />
                <Button Name="MaxButton" BorderThickness="0" Background="Gray" Width="46" Height="32" Click="MaxButton_Click" />
                <Button Name="CloseButton" BorderThickness="0" Background="Black" Width="46" Height="32" Click="CloseButton_Click" />
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
